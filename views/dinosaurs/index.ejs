<p>Welcome to dino land</p>

<form action="/dinosaurs" method="GET">
    <label for="nameFilter">Filter by Name</label>
    <input type="text" name="nameFilter" id="nameFilter">
    <input type="submit">
</form>

<ul>
    <% dinos.forEach((dino, index) => { %>
        <li>Here is the <%= dino.type %> named <%= dino.name %>!
        <form method="POST" action="/dinosaurs/<%= index %>/?_method=DELETE">
            <a href="/dinosaurs/edit/<%= index %>">Edit</a>
        <input type="submit" value="Delete">
        </form>

        </li>
    <% }) %>
</ul>